Proposed by:  <%if @project.user %>@project  <%= @project.user.name %> 
<% else %><%=current_user.name %>  <%end%>
<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <p>
    <%= f.label :libraries %><br />
    <%= text_field_tag 'project[libraries]', @project.libraries, :class => "tag" %>                          
<em>Input the names of projects or libraries you are using in your projet seperated by a comma. Use Enter to validate.</em>
  </p>

  <div class="field">
    <%= f.label :repository %><br />
    <%= f.text_field :repository %>
  </div>
  <div class="field">
    <%= f.label :live_url %><br />
    <%= f.text_field :live_url %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
